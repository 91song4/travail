<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- bootstrap -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous" />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"></script>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css" />
    <link
      href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
      rel="stylesheet" />

    <!-- <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.css" /> -->

    <!-- css -->
    <link rel="stylesheet" MIME Type="text/css" href="/css/register.css" />

    <title>Travail</title>
  </head>
  <body>
    <!-- body -->
    <div class="register-background">
      <div class="register-wrap">
        <div class="register-form">
          <div class="register-title-wrap">
            <p>회원가입</p>
          </div>
          <div class="register-email-wrap">
            <input
              id="email"
              class="register-email-input"
              placeholder="이메일조건" />
          </div>
          <div class="register-password-wrap">
            <input
              type="password"
              id="password"
              class="register-password-input"
              placeholder="비밀번호 조건" />
          </div>
          <div class="register-phone-wrap">
            <input
              id="phone"
              class="register-phone-input"
              placeholder="휴대폰 조건" />
          </div>
          <div class="register-name-wrap">
            <input
              id="name"
              class="register-name-input"
              placeholder="이름 조건" />
          </div>
          <div class="register-btn-wrap">
            <button type="button" onclick="register()">가입하기</button>
          </div>
        </div>
      </div>
    </div>
    <script>
      function register() {
        // 유저 정보
        const userInfo = {
          email: $('#email').val(),
          password: $('#password').val(),
          phone: $('#phone').val(),
          name: $('#name').val(),
        };
        // console.log(userInfo);
        $.ajax({
          type: 'POST',
          url: 'http://localhost:3000/user',
          data: userInfo,
          success: function (response) {
            customAlert(response.message, function () {
              window.location.href = '/login';
            });
          },
          error: function (response) {
            $('.error-message-wrap').empty();
            let temp = `<p>${response.responseJSON.message}</p>`;
            $('.error-message-wrap').append(temp);
            $('input').val('');
          },
        });
      }
    </script>
  </body>
</html>
